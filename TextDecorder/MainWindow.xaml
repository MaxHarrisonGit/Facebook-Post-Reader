<Window x:Class="TextDecorder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextDecorder"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" x:Name="MainPage">
    <Grid>
        <Button Content="Search" HorizontalAlignment="Left" Height="36" Margin="358,273,0,0" VerticalAlignment="Top" Width="149" Click="Button_Click"/>
        <ComboBox HorizontalAlignment="Left" Height="28" Margin="349,10,0,0" VerticalAlignment="Top" Width="158" ItemsSource="{Binding Pages}"/>
        <TextBox HorizontalAlignment="Left" Height="28" Margin="22,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="206" x:Name="PageName"/>
        <Button Content="Add" HorizontalAlignment="Left" Height="28" Margin="233,10,0,0" VerticalAlignment="Top" Width="43" Click="Button_Click_1"/>
        <Button Content="Get String" HorizontalAlignment="Left" Height="27" Margin="10,282,0,0" VerticalAlignment="Top" Width="90" Click="Button_Click_2"/>
        

    </Grid>
</Window>
